    <!-- JavaScript for Form Handling and Icon Replacement -->
    <script>
        // Replace Lucide data-lucide attributes with SVG icons
        lucide.createIcons();

        // Get today's date and set it as the minimum selectable date
        document.addEventListener('DOMContentLoaded', () => {
            const dateInput = document.getElementById('eventDate');
            if (dateInput) {
                const today = new Date();
                const dd = String(today.getDate()).padStart(2, '0');
                const mm = String(today.getMonth() + 1).padStart(2, '0'); // January is 0!
                const yyyy = today.getFullYear();
                const minDate = yyyy + '-' + mm + '-' + dd;
                dateInput.setAttribute('min', minDate);
            }
        });

        // Form Submission Handler
        document.getElementById('bookingForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const date = document.getElementById('eventDate').value;
            const time = document.getElementById('eventTime').value;
            const venue = document.getElementById('eventVenue').value;
            const details = document.getElementById('details').value;
            const messageBox = document.getElementById('messageBox');
            
            // Basic validation
            if (!date || !time || !venue) {
                showMessage("Please fill out all required fields (Date, Time, Venue).", "error");
                return;
            }

            // Simulate sending data and show a success message
            // In a real application, this is where you'd send an API request to a booking system
            const bookingData = {
                date: date,
                time: time,
                venue: venue,
                details: details.substring(0, 100) + '...'
            };

            console.log("--- BOOKING REQUEST SUBMITTED ---");
            console.log(bookingData);
            console.log("----------------------------------");

            showMessage(`Booking request for ${date} at ${time} for a ${venue} event has been simulated. DJ GETMO will be in touch! (Check console for full data)`, "success");

            // Clear form after simulated submission
            this.reset();
        });

        /**
         * Displays a temporary message in the message box.
         * @param {string} message - The message to display.
         * @param {string} type - 'success' or 'error' to set colors.
         */
        function showMessage(message, type) {
            const messageBox = document.getElementById('messageBox');
            messageBox.textContent = message;
            messageBox.classList.remove('hidden', 'bg-red-900', 'border-red-700', 'text-red-300', 'bg-yellow-900', 'border-yellow-700', 'text-yellow-300');
            
            if (type === 'success') {
                messageBox.classList.add('bg-green-900', 'border-green-700', 'text-green-300');
            } else if (type === 'error') {
                 messageBox.classList.add('bg-red-900', 'border-red-700', 'text-red-300');
            } else {
                messageBox.classList.add('bg-yellow-900', 'border-yellow-700', 'text-yellow-300');
            }

            // Hide after 5 seconds
            setTimeout(() => {
                messageBox.classList.add('hidden');
            }, 5000);
        }

    </script>
